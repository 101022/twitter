<h1><%= t('comment.comment_edit') %></h1>

<div
    <span>以下のツイートに返信します</span><br>
    <%= @user.name %>:<%= @tweet.body %>
</div>
<br>
<%= form_with(model: @comment, url: comment_path, method: :patch, local: true) do |c| %>
    <%= hidden_field_tag :tweet_id, @comment.tweet.id %>
    <div class="form-group">
      <%= c.label :comment, t('comment.comment') %>
      <%= c.text_field :comment, class: "form-controll" %>
    </div>

  <%= c.submit t('view.update'), class: "btn btn-primary" %><br><br>
  <%= link_to t('view.back'), user_tweets_path(current_user) %>

<% end %>
