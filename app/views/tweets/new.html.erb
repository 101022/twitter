<h1><%= t('tweet.tweet_new') %></h1>

<%= form_with(model: @tweet, url: user_tweets_path) do |t| %>

  <table class="table table-striped table-bordered">
    <tr>
      <th><%= t.label :tweet, t('tweet.tweet') %></th>
      <td><%= t.text_field :tweet %></td>
    </tr>
    <tr>
      <th><%= t.label t('tweet.picture') %></th>
      <td><%= t.file_field :picture, id: :tweet_picture %></td>
    </tr>
  </table>

  <%= t.submit t('tweet.tweet'), class: "btn btn-primary" %><br><br>
  <%= link_to t('view.back'), user_tweets_path(@user) %>

<% end %>
