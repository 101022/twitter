<h1><%= t('user.user_show') %></h1>

<%= render 'follow_form' if signed_in? %><br>

<table class="table table-bordered">
  <tr>
    <th><%= t('user.name') %></th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th><%= t('user.mail') %></th>
    <td><%= @user.mail %></td>
  </tr>
</table>
<% if current_user?(@user) %>
  <p><%= link_to  t('view.edit'), edit_user_path %></p>
<% end %>

<p><%= link_to t('tweet.tweet_list'), user_tweets_path(@user) %></p>

